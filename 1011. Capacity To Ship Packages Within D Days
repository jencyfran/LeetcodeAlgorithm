class Solution:
    def shipWithinDays(self, weights: List[int], days: int) -> int:
        l = max(weights)
        r = sum(weights)
        result = r

        def canShip(mid):
            ships, currMid = 1, mid
            for i in weights:
                if currMid - i < 0:
                    ships += 1
                    currMid = mid
                currMid -= i
            return ships <= days


        while l < r:
            mid = (l+r)//2
            if canShip(mid):
                result = min(mid, result)
                r = mid - 1
            else:
                l = mid + 1
        return result
